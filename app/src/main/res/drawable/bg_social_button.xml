<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="oval">

    <!-- Solid white background -->
    <solid android:color="@android:color/white"/>

    <!-- Light gray border -->
    <stroke
            android:width="1dp"
            android:color="#E0E0E0"/>

    <!-- Shadow/elevation -->
    <padding
            android:left="2dp"
            android:top="2dp"
            android:right="2dp"
            android:bottom="2dp"/>
</shape>